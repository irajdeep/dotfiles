{
    "editor.fontSize": 12,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "window.zoomLevel": 0,
    "workbench.editor.showTabs": true,
    "go.useLanguageServer": true,
    "go.inferGopath": true,
    "go.buildOnSave": "off",
    "go.vetOnSave": "off",
    "go.testFlags": [
        "-v",
        "-count=1",
    ],
    // "go.languageServerFlags": [
    //     "serve",
    //     "-rpc.trace",
    // ],
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.fontFamily": "Menlo, 'Courier New', Monaco, monospace",
    "search.useIgnoreFiles": false,
    "cSpell.userWords": [
        "Infof",
        "admissionregistration",
        "apigroups",
        "apiversion",
        "apiversions",
        "cabundle",
        "clientconfig",
        "configmap",
        "configration",
        "corev",
        "glog",
        "ipaddresses",
        "kubconfig",
        "kube",
        "kubeconfig",
        "kubernetes",
        "matchlabels",
        "metav",
        "namespaceselector",
        "rdas",
        "scontext",
        "sigs",
        "typemeta",
        "unmarshall",
        "webhook",
        "webhooks"
    ],
    "workbench.colorTheme": "Vim Hybrid Theme",
    "[html]": {
        "editor.formatOnSave": false,
    },
    // "editor.codeActionsOnSave": null,
}
